<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:id="@+id/list_item_id"
        android:layout_alignTop="@+id/edit_list_button"
        android:layout_toStartOf="@+id/edit_list_button"
        android:layout_marginEnd="14dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edit_list_button"
        android:background="@drawable/ic_edit"
        android:layout_marginRight="20dp"
        android:layout_alignTop="@+id/delete_list_button"
        android:layout_toStartOf="@+id/delete_list_button" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:id="@+id/delete_list_button"
        android:layout_marginTop="20dp"
        android:background="@drawable/ic_delete"/>

    <View
        android:layout_marginTop="15dp"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@id/list_item_id"
        android:backgroundTint="@color/colorAccentDark"
        android:background="#000000" />
</RelativeLayout>