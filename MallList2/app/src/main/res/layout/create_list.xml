<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="false"
    app:cardPreventCornerOverlap="false"
    app:cardMaxElevation="3dp"
    app:cardCornerRadius="4dp">
    <RelativeLayout
        android:orientation="vertical" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:id="@+id/list_item_id"
            android:layout_alignTop="@+id/edit_list_button"
            android:layout_toStartOf="@+id/edit_list_button"
            android:layout_marginEnd="14dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/edit_list_button"
            android:background="@drawable/ic_edit"
            android:layout_marginRight="20dp"
            android:layout_alignTop="@+id/delete_list_button"
            android:layout_toStartOf="@+id/delete_list_button" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:id="@+id/delete_list_button"
            android:layout_marginTop="20dp"
            android:background="@drawable/ic_delete"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>
